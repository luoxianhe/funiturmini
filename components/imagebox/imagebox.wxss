.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
}
 
.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}
 
.tab-item.active {
  color: #4675f9;
  position: relative;
}
 
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 52rpx;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}
 
.item-ans {
  width: 100%;
  margin-top: 20rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}
 
.avatar {
  width: 100%;
  height: 400rpx;
  position: relative;
  padding-right: 30rpx;
}
 
.avatar .img {
  width: 100%;
  height: 100%;
}
 
.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
 .tab-content{
   height: 700rpx;
 }
.expertInfo {
   font-size: 30rpx;
  flex-grow: 2;
  padding-top: 20rpx;
}

 

 

